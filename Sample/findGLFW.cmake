set( GLFW_SEARCH_PATHS
	${GLFW_PATH}
	${GLFW_PATH}/include
	${GLFW_PATH}/lib
	${GLFW_PATH}/lib-msvc100/Release
	${GLFW_PATH}/lib-msvc100/Debug
	)

IF (MINGW)
set( GLFW_SEARCH_PATHS ${GLFW_SEARCH_PATHS}
		${GLFW_PATH}/lib-mingw)
ENDIF(MINGW)

IF(CYGWIN)
set( GLFW_SEARCH_PATHS ${GLFW_SEARCH_PATHS}
	${GLFW_PATH}/lib-cygwin)
ENDIF(CYGWIN)

FIND_PATH( GLFW_INCLUDE_DIR GL/glfw.h PATHS ${GLFW_SEARCH_PATHS} )
FIND_LIBRARY( GLFW_LIBRARY glfw PATHS ${GLFW_SEARCH_PATHS} )

